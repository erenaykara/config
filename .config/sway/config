# key constants
set $mod Mod4
set $alt Shift
set $left n
set $down e
set $up u
set $right i
set $terminal foot

# wallpaper
output * bg /home/.wallpaper.png fill

# keyboard
input * xkb_layout "de"
input * xkb_numlock enabled
input * repeat_delay 120
input * repeat_rate 40

# terminal emulator
bindsym $mod+m exec $terminal
bindsym $mod+$alt+m exec $terminal --app-id "floating"

# program launcher
bindsym $mod+v exec rofi -show run -theme theme

# window switcher
bindsym $mod+c exec $terminal --app-id "floating" -e tty-clock -c

# window killer
bindsym $mod+$alt+g exec /home/.config/sway/killer.sh

# floating controls
bindsym $mod+h floating toggle
floating_modifier $mod normal

# screenshot
bindsym $mod+y exec /home/.config/sway/screenshot.sh /home/.screenshots false
bindsym $mod+$alt+y exec /home/.config/sway/screenshot.sh /home/.screenshots true

# clipboard manager
exec wl-paste -t text --watch bash /home/.config/sway/copy.sh
bindsym $mod+d exec clipman pick -t "CUSTOM" -T "rofi -dmenu -p clipboard -i -theme theme"
bindsym $mod+$alt+d exec clipman clear -t "CUSTOM" -T "rofi -dmenu -p clipboard -i -theme theme"

# authentication agent
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# notifications
exec dunst -config /home/.config/dunst/dunstrc
bindsym $mod+a exec dunstctl close-all
bindsym $mod+r exec dunstctl history-pop

# volume control
bindsym $mod+o exec $terminal --app-id "floating" -e alsamixer
bindsym $mod+$alt+o exec pavucontrol --tab=3

# scratchpad
bindsym $mod+s move scratchpad
bindsym $mod+$alt+s scratchpad show

# sway actions
bindsym $mod+$alt+k reload
bindsym $mod+$alt+h exit

# focus
focus_follows_mouse no
focus_on_window_activation smart
mouse_warping container

# window properties
for_window [app_id="floating"] floating enable
default_border pixel 4px
gaps inner 6px
gaps outer 4px

# window actions
bindsym $mod+t fullscreen
bindsym $mod+k focus mode_toggle
bindsym $mod+g kill

# move focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move window
bindsym $mod+$alt+$left move left 30px
bindsym $mod+$alt+$down move down 30px
bindsym $mod+$alt+$up move up 30px
bindsym $mod+$alt+$right move right 30px

# resize window
bindsym $mod+alt+$left resize shrink width 20px
bindsym $mod+alt+$down resize grow height 20px
bindsym $mod+alt+$up resize shrink height 20px
bindsym $mod+alt+$right resize grow width 20px

# window colors
client.focused #666666 #666666 #bbbbbb #666666 #666666
client.focused_inactive #080808 #080808 #bbbbbb #080808 #080808
client.placeholder #080808 #080808 #bbbbbb #080808 #080808
client.unfocused #080808 #080808 #bbbbbb #080808 #080808
client.urgent #080808 #080808 #bbbbbb #080808 #080808

# workspaces
bindsym $mod+w workspace number 1
bindsym $mod+f workspace number 2
bindsym $mod+p workspace number 3
bindsym $mod+b workspace number 4

# move window
bindsym $mod+$alt+w move container to workspace number 1
bindsym $mod+$alt+f move container to workspace number 2
bindsym $mod+$alt+p move container to workspace number 3
bindsym $mod+$alt+b move container to workspace number 4

# swaybar
bar mode invisible

# includes
include /etc/sway/config.d/*
